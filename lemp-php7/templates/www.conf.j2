; {{ ansible_managed }}
[www]
user = www-data
group = www-data
;listen = 127.0.0.1:9000
listen = /var/run/php7-fpm.sock
listen.backlog = -1
listen.owner = www-data
listen.group = www-data
listen.mode = 0660
pm = dynamic
pm.max_children = {{ pm_max_children | default (50) }}
pm.start_servers = {{ pm_start_servers | default(30) }}
pm.min_spare_servers = {{ pm_min_spare | default(10) }}
pm.max_spare_servers = {{ pm_max_spare | default(50) }} 
pm.max_requests = {{ pm_max_requests | default(500) }}
pm.status_path = /status
ping.path = /ping
access.log = /var/log/php7-fpm/$pool.access.log
slowlog = /var/log/php7-fpm/$pool.log.slow
request_slowlog_timeout = 10
request_terminate_timeout = 30
chdir = /
